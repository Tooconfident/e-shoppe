%h1 Sign Up Form

- flash.each do |message_type, message|
  %div{:class => "alert alert-#{message_type}"}= message

= form_for :user, url: users_path do |f|
  %p
    = f.label :username
    %br/
    = f.text_field :username
  %p
    = f.label :email
    %br/
    = f.text_field :email
  %p
    = f.label :password
    %br/
    = f.password_field :password
  %p
    = f.submit("Sign Up")
