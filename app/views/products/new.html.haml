%h1 New Product Form

- flash.each do |message_type, message|
  %div{:class => "alert alert-#{message_type}"}= message

= form_for :product, url: products_path do |f|
  %p
    = f.label :img
    %br/
    = f.text_field :img
  %p
    = f.label :name
    %br/
    = f.text_field :name
  %p
    = f.label :description
    %br/
    = f.text_area :description
  %p
    = f.label :price
    %br/
    = f.text_field :price
  %p
    = f.label :quantity
    %br/
    = f.number_field :quantity
  %p
    = f.submit
